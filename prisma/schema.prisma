datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["orderByRelation"]
}

model User {
  id            Int        @id @default(autoincrement())
  lastName      String
  firstName     String
  email         String
  roles         Role[]
}

enum Role {
    UBIADMIN
    SUPERADMIN
    ADMIN
    MANAGER
    READER
}
